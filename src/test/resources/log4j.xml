<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration debug="true" xmlns:log4j='http://jakarta.apache.org/log4j/'>

    <appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} %p [%c] .%M(%L) | %m%n" />
        </layout>
    </appender>

    <!--<appender name="FILE" class="org.apache.log4j.DailyRollingFileAppender">-->
        <!--<param name="File" value="./logs/e2e-test.log" />-->
        <!--<param name="Append" value="true" />-->
        <!--<param name="DatePattern" value=".yyyy-MM-dd" />-->
        <!--<layout class="org.apache.log4j.PatternLayout">-->
            <!--<param name="ConversionPattern" value="%d{ISO8601} [%p] [%t] [%c] .%M(%L) | %m%n" />-->
        <!--</layout>-->
    <!--</appender>-->

    <logger name="org.apache.pdfbox">
        <level value="WARN" />
    </logger>
    <logger name="org.apache.fontbox">
        <level value="WARN" />
    </logger>
    <logger name="freemarker.cache">
        <level value="WARN" />
    </logger>

    <logger name="com.ea">
        <level value="DEBUG" />
    </logger>

    <root>
        <level value="DEBUG" />
        <appender-ref ref="CONSOLE" />
        <!--<appender-ref ref="FILE" />-->
    </root>

</log4j:configuration>